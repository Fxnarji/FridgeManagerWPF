<Window x:Class="FridgeManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FridgeManagerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,102,0,0" FontSize="16"/>
        <Button x:Name="SaveButton" Content="Generate Random" HorizontalAlignment="Left" Margin="34,24,0,0" VerticalAlignment="Top" Height="55" Width="92" Click="Button_Click" FontSize="16"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="161,59,0,0" VerticalAlignment="Top" Click="Button_Click_1" FontSize="16"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="248,59,0,0" VerticalAlignment="Top" Click="Button_Click_2" FontSize="16"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="204,59,0,0" VerticalAlignment="Top" Click="Button_Click_3" FontSize="16"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="386,59,0,0" VerticalAlignment="Top" Click="Button_Click_4" /FontSize="16">

    </Grid>
</Window>
